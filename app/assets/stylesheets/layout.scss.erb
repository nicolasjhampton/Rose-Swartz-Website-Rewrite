@import url('https://fonts.googleapis.com/css?family=Arvo|Poiret+One&display=swap');

*, ::before, ::after {
    box-sizing: border-box;
}

html {
    height: 100%;
}

body {
    height: 100vh;
    display: inline-block;
    width: 100%;
    border: 20px solid white;
}

ul, li, h1, div {
    display: inline-block;
    list-style: none;
    margin: 0;
}

#main-wrapper {
    height: 100%;
    width: 100%;
    background: no-repeat url(<%= asset_data_uri('bg-web.jpg') %>);
    background-size: 100% 105%;
    border: 20px solid black;
}

.main-header {
    background: linear-gradient(black, black, black, transparent, transparent);
    width: 100%;
    height: 100px;
}

#menu {
    display: flex;
    justify-content: space-between;
}

#menu-title {
    h1 {
        margin: 0;
        color: grey;
        line-height: 0.5;
        font-family: 'Poiret One', cursive;
        font-size: 2.5rem;
        text-shadow: -3px 3px 5px rgba(100,100,100,.5),
                    -2px 2px 5px rgba(100,100,100,.6),
                    -1px 1px 1px rgba(100,100,100,1);
        .second {
            margin-left: 70px;
        }
    }
}

#menu-options {
    @media (min-width: 740px) {
        margin-top: 0px; 
    }
    ul {
        margin: 0;
        li {
            display: block;
            text-align: center;
            padding: 10px 20px;
            box-shadow: -5px 5px rgba(20,20,20,.25);
            background: linear-gradient(to left, black,black, black, rgba(20,20,20,1), rgba(20,20,20,1));
            @media (min-width: 740px) {
                display: inline-block;
                border-radius: 0 0 7px 7px;
                background: linear-gradient(black, gray, rgba(255, 255, 255, 1));
            }
            a {
                font-family: 'Arvo', serif;
                text-decoration: none;
                color: gray;
                @media (min-width: 740px) {
                    color: black;
                }
            }
        }
    }
}